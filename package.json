{
  "name": "packemon",
  "version": "0.0.0",
  "description": "Build and prepare your package using standardized practices. Gotta pack 'em all!",
  "keywords": [
    "build",
    "prepare",
    "pack",
    "package"
  ],
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript",
    "ci": "yarn run type && yarn run test && yarn run lint",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn test && yarn run build"
  },
  "repository": "https://github.com/milesj/packemon.git",
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": "./lib/bin.js",
  "sideEffects": false,
  "engines": {
    "node": ">=10.10.0"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "decorators": true,
      "node": true,
      "react": true
    }
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.10.1",
    "@types/react": "^16.9.46"
  },
  "dependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@boost/cli": "^2.1.0",
    "@boost/common": "^2.2.0",
    "@boost/pipeline": "^2.1.0",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "babel-plugin-transform-dev": "^2.0.1",
    "ink": "^3.0.4",
    "react": "^16.13.1",
    "rollup": "^2.26.5",
    "rollup-plugin-node-externals": "^2.2.0",
    "spdx-license-list": "^6.2.0"
  }
}
