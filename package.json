{
  "name": "packemon",
  "version": "0.0.0",
  "description": "Build and prepare your package using standardized practices. Gotta pack 'em all!",
  "keywords": [
    "build",
    "prepare",
    "pack",
    "package"
  ],
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript",
    "ci": "yarn run type && yarn run test && yarn run lint",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "release": "npx np --yolo",
    "test": "beemo jest",
    "type": "beemo typescript --noEmit",
    "prerelease": "yarn test && yarn run build"
  },
  "repository": "https://github.com/milesj/packemon.git",
  "author": "Miles Johnson",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=10.10.0"
  },
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    }
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.10.1"
  },
  "dependencies": {}
}
